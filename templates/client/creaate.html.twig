{% extends 'base.html.twig' %}

{% block title %}Créer un Client - Gestion Boutique{% endblock %}

{% block content %}
<section class="w-2/5 bg-white p-6 border-r border-gray-300">
    <h2 class="text-2xl font-bold mb-4">Créer un Client</h2>
    <form class="space-y-4" action="{{ path('create_client') }}" method="post">
        <div>
            <label class="block font-medium mb-1" for="nom">Nom</label>
            <input type="text" id="nom" name="nom" class="w-full p-2 border border-gray-300 rounded" required>
        </div>
        <div>
            <label class="block font-medium mb-1" for="prenom">Prénom</label>
            <input type="text" id="prenom" name="prenom" class="w-full p-2 border border-gray-300 rounded" required>
        </div>
        <div>
            <label class="block font-medium mb-1" for="telephone">Téléphone</label>
            <input type="tel" id="telephone" name="telephone" class="w-full p-2 border border-gray-300 rounded" required>
        </div>
        <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded">Ajouter Client</button>
    </form>
</section>
{% endblock %}
