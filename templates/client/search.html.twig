{% extends 'base.html.twig' %}

{% block title %}Rechercher un Client - Gestion Boutique{% endblock %}

{% block content %}
<section class="w-2/5 bg-white p-6 border-r border-gray-300">
    <h2 class="text-2xl font-bold mb-4">Rechercher un Client</h2>
    <form class="space-y-4" action="{{ path('search_client') }}" method="get">
        <div>
            <label class="block font-medium mb-1" for="search">Nom ou Téléphone</label>
            <input type="text" id="search" name="search" class="w-full p-2 border border-gray-300 rounded" required>
        </div>
        <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded">Rechercher</button>
    </form>
</section>
{% endblock %}
